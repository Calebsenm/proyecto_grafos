<DialogPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.grafos_colombia.controller.MetricsDialogController"
            prefWidth="720.0" prefHeight="660.0"
            style="-fx-background-color: white;">
    <content>
        <VBox fx:id="rootContainer" spacing="18.0">
            <padding>
                <Insets top="20.0" right="24.0" bottom="20.0" left="24.0"/>
            </padding>
            <children>
                <Label fx:id="titleLabel" text="MÃ©tricas del Grafo"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <VBox fx:id="metricsPanel" spacing="12.0"
                      style="-fx-background-color: #ecf0f1; -fx-background-radius: 8; -fx-padding: 18;">
                    <children>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="ðŸ“ Radio:" style="-fx-font-weight: bold; -fx-min-width: 120;"/>
                                <Label fx:id="radioValueLabel" text="0.00 km"
                                       style="-fx-text-fill: #3498db; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="ðŸ“ DiÃ¡metro:" style="-fx-font-weight: bold; -fx-min-width: 120;"/>
                                <Label fx:id="diametroValueLabel" text="0.00 km"
                                       style="-fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="ðŸŽ¯ Centro:" style="-fx-font-weight: bold; -fx-min-width: 120;"/>
                                <Label fx:id="centroValueLabel" text="-"
                                       style="-fx-text-fill: #2ecc71; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <HBox fx:id="highlightButtonsBox" spacing="12.0" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="4.0" right="0.0" bottom="0.0" left="0.0"/>
                    </padding>
                    <children>
                        <Button fx:id="radioHighlightButton" text="Resaltar Radio"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Button fx:id="diametroHighlightButton" text="Resaltar DiÃ¡metro"
                                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Button fx:id="centroHighlightButton" text="Resaltar Centro"
                                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    </children>
                </HBox>

                <Separator/>

                <BorderPane prefHeight="400.0" VBox.vgrow="ALWAYS">
                    <top>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <Label text="Excentricidades de los Nodos"
                                       style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <HBox spacing="6.0">
                                    <children>
                                        <Label text="Filtro:" style="-fx-font-weight: bold;"/>
                                        <ComboBox fx:id="filterComboBox" prefWidth="180.0"/>
                                    </children>
                                </HBox>
                                <TextField fx:id="filterField" promptText="Filtrar por nombre..." prefWidth="200.0"/>
                            </children>
                        </HBox>
                    </top>
                    <center>
                        <TableView fx:id="excentricidadTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="nodoColumn" text="Nodo" prefWidth="280.0" minWidth="220.0"/>
                                <TableColumn fx:id="excentricidadColumn" text="Excentricidad (km)" prefWidth="180.0" minWidth="150.0"/>
                                <TableColumn fx:id="centroColumn" text="Es Centro" prefWidth="140.0" minWidth="110.0"/>
                            </columns>
                        </TableView>
                    </center>
                    <right>
                        <VBox spacing="8.0" prefWidth="260.0" BorderPane.alignment="CENTER">
                            <children>
                                <Label text="Detalle de la excentricidad"
                                       style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <TextArea fx:id="detailArea" wrapText="true" prefHeight="360.0"
                                          style="-fx-font-family: 'Consolas'; -fx-font-size: 13px; -fx-control-inner-background: white;"
                                          promptText="Selecciona un nodo en la tabla para ver el recorrido de su excentricidad."
                                          VBox.vgrow="ALWAYS"/>
                            </children>
                        </VBox>
                    </right>
                </BorderPane>
            </children>
        </VBox>
    </content>
    <buttonTypes>
        <ButtonType fx:id="closeButtonType" text="Cerrar" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>
