<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.grafos_colombia.controller.MainController">
    
    <!-- Top: Title Bar -->
    <top>
        <VBox alignment="CENTER" style="-fx-background-color: #2c3e50;">
            <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="Ruta más corta con Dijkstra - Colombia" />
            <Label style="-fx-text-fill: #bdc3c7; -fx-font-size: 14px;" text="Visualización de Grafos para Rutas en Colombia" />
        </VBox>
    </top>
    
    <!-- Left: Input Panel -->
    <left>
        <ScrollPane fitToWidth="true" minWidth="280" maxWidth="350" style="-fx-background-color: #ecf0f1;">
            <VBox spacing="10.0" style="-fx-padding: 15;">

                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Tipo de Análisis" />
                <VBox style="-fx-border-color: #bdc3c7; -fx-border-radius: 4; -fx-padding: 10;" spacing="8">
                    <fx:define>
                        <ToggleGroup fx:id="calculationTypeGroup" />
                    </fx:define>
                    <RadioButton fx:id="shortestPathRadio" text="Ruta más Corta y Alternativa" toggleGroup="$calculationTypeGroup" onAction="#handleCalculationTypeChange" selected="true" />
                    <RadioButton fx:id="simpleCycleRadio" text="Ciclo Simple" toggleGroup="$calculationTypeGroup" onAction="#handleCalculationTypeChange" />
                    <RadioButton fx:id="eccentricityRadio" text="Excentricidad de un Nodo" toggleGroup="$calculationTypeGroup" onAction="#handleCalculationTypeChange" />
                </VBox>
                
                <Separator />
                
                <VBox fx:id="originContainer" spacing="5.0">
                    <Label style="-fx-font-weight: bold;" text="Lugar Origen:" />
                    <TextField fx:id="originFilterField" onKeyReleased="#filterOriginComboBox" promptText="🔍 Filtrar lugar de origen..." style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4;" />
                    <ComboBox fx:id="originComboBox" editable="false" maxWidth="1.7976931348623157E308" promptText="Seleccione un lugar..." />
                </VBox>

                <VBox fx:id="destinationContainer" spacing="5.0">
                    <Label style="-fx-font-weight: bold;" text="Lugar Destino:" />
                    <TextField fx:id="destinationFilterField" onKeyReleased="#filterDestinationComboBox" promptText="🔍 Filtrar lugar de destino..." style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4;" />
                    <ComboBox fx:id="destinationComboBox" editable="false" maxWidth="1.7976931348623157E308" promptText="Seleccione un lugar..." />
                </VBox>
                
                <HBox alignment="CENTER" spacing="10.0">
                    <Button fx:id="calculateButton" onAction="#calculateShortestPath" prefWidth="120" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Calcular Ruta" />
                    <Button fx:id="clearButton" onAction="#clearResults" prefWidth="80" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Limpiar" />
                </HBox>
                
                <Separator />
                
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Controles de Grafo" />
                
                <Button fx:id="loadExampleButton" maxWidth="1.7976931348623157E308" onAction="#loadExampleGraph" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" text="Cargar Grafo Ejemplo" />
                
                <Button fx:id="loadDatabaseButton" maxWidth="1.7976931348623157E308" onAction="#loadDatabaseGraph" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Cargar Grafo desde BD" />
                
                <Button fx:id="toggleLabelsButton" onAction="#toggleEdgeLabels" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Mostrar/Ocultar Etiquetas" />
                
                <Separator />
                
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Tipos de Layout" />
                
                <HBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                    <Button fx:id="geographicLayoutButton" maxWidth="1.7976931348623157E308" onAction="#setGeographicLayout" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" text="🗺️ Geo" HBox.hgrow="ALWAYS" />
                    <Button fx:id="forceLayoutButton" maxWidth="1.7976931348623157E308" onAction="#setForceLayout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="🌀 Fuer" HBox.hgrow="ALWAYS" />
                </HBox>
                          
            </VBox>
        </ScrollPane>
    </left>
    
