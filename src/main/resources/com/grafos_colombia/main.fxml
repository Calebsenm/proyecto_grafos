    <!-- Center: Graph Visualization -->
    <center>
        <ScrollPane fx:id="graphScrollPane" fitToHeight="true" fitToWidth="true" style="-fx-background-color: #ecf0f1;">
            <Canvas fx:id="graphCanvas" />
        </ScrollPane>
    </center>
    
    <!-- Bottom: Results Panel -->
    <bottom>
        <VBox minHeight="120" spacing="8" style="-fx-background-color: #34495e; -fx-padding: 12;">
            
            <!-- Top row with main stats -->
            <HBox alignment="CENTER_LEFT" spacing="25.0">
                <VBox HBox.hgrow="NEVER">
                    <Label style="-fx-text-fill: #bdc3c7; -fx-font-size: 11px;" text="DISTANCIA TOTAL" />
                    <Label fx:id="distanceLabel" style="-fx-text-fill: #2ecc71; -fx-font-size: 22px; -fx-font-weight: bold;" text="0.0 km" />
                </VBox>
                <VBox HBox.hgrow="NEVER">
                    <Label style="-fx-text-fill: #bdc3c7; -fx-font-size: 11px;" text="ESTADÍSTICAS" />
                    <Label fx:id="statsLabel" style="-fx-text-fill: #f39c12; -fx-font-size: 14px;" text="Nodos: 0 | Aristas: 0" />
                </VBox>
            </HBox>
            
            <!-- Bottom row with detailed path -->
            <VBox spacing="4" VBox.vgrow="ALWAYS">
                <Label style="-fx-text-fill: #bdc3c7; -fx-font-size: 11px;" text="RUTA DETALLADA" />
                <TextArea fx:id="pathResultArea" editable="false" prefRowCount="2" style="-fx-font-family: 'Consolas'; -fx-font-size: 14px; -fx-control-inner-background: white; -fx-text-fill: black;" wrapText="false" VBox.vgrow="ALWAYS" />
            </VBox>

        </VBox>
    </bottom>
    
</BorderPane>
