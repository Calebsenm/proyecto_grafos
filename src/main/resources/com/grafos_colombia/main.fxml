<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<!-- AsegÃºrate de que el controlador referenciado sea com.grafos_colombia.controller.MainController -->
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.grafos_colombia.controller.AppController">
    
    <!-- Top: Title Bar -->
    <top>
        <VBox alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 6;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Visualizador de Rutas de Colombia" />
        </VBox>
    </top>
    
    <!-- Left: Input Panel -->
    <left>
        <ScrollPane fitToWidth="true" minWidth="280" maxWidth="350" style="-fx-background-color: #ecf0f1;">
            <VBox spacing="10.0" style="-fx-padding: 15;">

                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Tipo de AnÃ¡lisis" />
                <VBox style="-fx-border-color: #bdc3c7; -fx-border-radius: 4; -fx-padding: 10;" spacing="8">
                    <fx:define>
                        <ToggleGroup fx:id="calculationTypeGroup" />
                    </fx:define>
                    <RadioButton fx:id="shortestPathRadio" text="Ruta mÃ¡s Corta y Alternativa" toggleGroup="$calculationTypeGroup" onAction="#handleCalculationTypeChange" selected="true" />
                    <RadioButton fx:id="simpleCycleRadio" text="Ciclo Simple" toggleGroup="$calculationTypeGroup" onAction="#handleCalculationTypeChange" />
                    <RadioButton fx:id="eccentricityRadio" text="Excentricidad de un Nodo" toggleGroup="$calculationTypeGroup" onAction="#handleCalculationTypeChange" />
                    <RadioButton fx:id="graphMetricsRadio" text="MÃ©tricas del Grafo" toggleGroup="$calculationTypeGroup" onAction="#handleCalculationTypeChange" />
                </VBox>
                
                <Separator />
                
                <VBox fx:id="originContainer" spacing="5.0">
                    <Label style="-fx-font-weight: bold;" text="Lugar Origen:" />
                    <TextField fx:id="originFilterField" onKeyReleased="#filterOriginComboBox" promptText="ðŸ” Filtrar lugar de origen..." style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4;" />
                    <ComboBox fx:id="originComboBox" editable="false" maxWidth="1.7976931348623157E308" promptText="Seleccione un lugar..." />
                </VBox>

                <VBox fx:id="destinationContainer" spacing="5.0">
                    <Label style="-fx-font-weight: bold;" text="Lugar Destino:" />
                    <TextField fx:id="destinationFilterField" onKeyReleased="#filterDestinationComboBox" promptText="ðŸ” Filtrar lugar de destino..." style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4;" />
                    <ComboBox fx:id="destinationComboBox" editable="false" maxWidth="1.7976931348623157E308" promptText="Seleccione un lugar..." />
                </VBox>
                
                <HBox alignment="CENTER" spacing="10.0">
                    <Button fx:id="calculateButton" onAction="#calculateShortestPath" prefWidth="120" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Calcular Ruta" />
                    <Button fx:id="clearButton" onAction="#clearResults" prefWidth="80" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Limpiar" />
                </HBox>
                
                <Button fx:id="toggleRouteButton" onAction="#toggleRouteView" maxWidth="1.7976931348623157E308" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;" text="Ver Ruta Alternativa" visible="false" managed="false" />
                
                <Separator />
                
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Controles de Grafo" />
                
                <Button fx:id="loadDatabaseButton" maxWidth="1.7976931348623157E308" onAction="#loadDatabaseGraph" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Cargar CSV â†’ BD â†’ Grafo" />
                
                <Button fx:id="toggleLabelsButton" onAction="#toggleEdgeLabels" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Mostrar/Ocultar Etiquetas" />
                
                <Separator />
                
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Tipos de Layout" />
                
                <Button fx:id="forceLayoutButton" maxWidth="1.7976931348623157E308" onAction="#setForceLayout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸŒ€ Layout" />
                          
            </VBox>
        </ScrollPane>
    </left>
    
    <!-- Center: Graph Visualization -->
    <center>
        <ScrollPane fx:id="graphScrollPane" fitToHeight="true" fitToWidth="true" style="-fx-background-color: #ecf0f1;">
            <Canvas fx:id="graphCanvas" />
        </ScrollPane>
    </center>
    
    <!-- Bottom: Results Panel -->
    <bottom>
        <VBox style="-fx-background-color: #eef1f5; -fx-padding: 12; -fx-border-color: #d5d9e0; -fx-border-width: 1 0 0 0;">
            <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 12px; -fx-font-weight: bold;" text="Resultados"/>
            <HBox spacing="16.0" alignment="CENTER_LEFT" style="-fx-padding: 6 0 6 0;">
                <VBox spacing="4.0">
                    <Label style="-fx-text-fill: #6c7a89; -fx-font-size: 11px;" text="DISTANCIA TOTAL"/>
                    <Label fx:id="distanceLabel" style="-fx-text-fill: #1abc9c; -fx-font-size: 22px; -fx-font-weight: bold;" text="0.0 km"/>
                </VBox>
                <VBox spacing="4.0">
                    <Label style="-fx-text-fill: #6c7a89; -fx-font-size: 11px;" text="ESTADÃSTICAS"/>
                    <Label fx:id="statsLabel" style="-fx-text-fill: #e67e22; -fx-font-size: 14px;" text="Nodos: 0 | Aristas: 0"/>
                </VBox>
            </HBox>
            <BorderPane prefHeight="200.0">
                <top>
                    <Label text="Detalle" style="-fx-text-fill: #2c3e50; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                </top>
                <center>
                    <TextArea fx:id="pathResultArea" editable="false"
                              style="-fx-font-family: 'Consolas'; -fx-font-size: 13px; -fx-control-inner-background: white; -fx-text-fill: black;"
                              wrapText="true" BorderPane.alignment="CENTER"/>
                </center>
            </BorderPane>
        </VBox>
    </bottom>
    
</BorderPane>
